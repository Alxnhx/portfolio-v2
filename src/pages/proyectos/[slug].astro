---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const proyectos = await getCollection('proyectos');
  return proyectos.map((p) => ({
    params: { slug: p.slug },
    props: { proyecto: p },
  }));
}

interface Props {
  proyecto: CollectionEntry<'proyectos'>;
}

const { proyecto } = Astro.props as Props;
const { data, render } = proyecto;

const {
  title,
  summary,
  cover,
  stack = [],
  repo,
  demo,
  date,
} = data;

const { Content } = await render();

const stackText = Array.isArray(stack) ? stack.join(' · ') : String(stack);

let formattedDate: string | null = null;
if (date) {
  const d = new Date(String(date));
  formattedDate = d.toLocaleDateString('es-MX', {
    year: 'numeric',
    month: 'short',
    day: '2-digit',
  });
}
---

<BaseLayout title={`${title} — Proyecto`} description={summary}>
  <main class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 py-10 space-y-12">
    {/* HERO */}
    <section class="page-hero space-y-6 text-slate-50">
      <div class="space-y-2">
        <p class="text-xs font-semibold tracking-wide text-sky-300 uppercase">
          Caso de estudio
        </p>
        <h1 class="font-display text-3xl md:text-4xl font-semibold tracking-tight">
          {title}
        </h1>
        <p class="text-sm md:text-base text-slate-200/90 max-w-2xl">
        {summary}
        </p>
        {formattedDate && (
          <p class="text-[11px] uppercase tracking-wide text-slate-400">
            Publicado el {formattedDate}
          </p>
        )}
      </div>

      {/* Chips de stack */}
      {Array.isArray(stack) && stack.length > 0 && (
        <ul class="flex flex-wrap gap-2">
          {stack.map((t: string) => (
            <li class="text-xs rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-slate-700 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200">
              {t}
            </li>
          ))}
        </ul>
      )}

      {/* Portada */}
      {cover && (
        <figure class="mt-2 overflow-hidden rounded-2xl border border-slate-200 bg-slate-50 dark:border-slate-800 dark:bg-slate-900">
          <img
            src={cover}
            alt={title}
            loading="lazy"
            class="w-full object-cover"
          />
        </figure>
      )}

      {/* Terminal stack */}
      <aside class="mt-6 max-w-xl rounded-xl border border-slate-800 bg-black px-4 py-3 text-xs font-mono text-slate-50 shadow-lg">
        <div class="flex items-center justify-between">
          <div class="flex space-x-2 text-red-500">
            <div class="h-3 w-3 rounded-full bg-red-500"></div>
            <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
            <div class="h-3 w-3 rounded-full bg-green-500"></div>
          </div>
          <p class="text-[10px] text-slate-400">stack.sh</p>
        </div>
        <div class="mt-3 space-y-1">
          <p class="text-emerald-400">
            $ Proyecto:&nbsp;<span class="text-slate-50">{title}</span>
          </p>
          <p class="text-emerald-400">$ Tech stack</p>
          <p class="text-slate-50 truncate">➜ {stackText}</p>
          <p class="text-emerald-400">
            $ status: <span class="text-sky-400">ready</span>
          </p>
        </div>
      </aside>

      {/* Links */}
      <div class="mt-4 flex flex-wrap gap-3">
        {repo && (
          <a
            href={repo}
            target="_blank"
            rel="noreferrer"
            class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-fuchsia-500 to-cyan-400 px-4 py-2 text-xs md:text-sm font-semibold text-slate-900 shadow-lg shadow-fuchsia-500/40 transition hover:scale-[1.02] hover:shadow-fuchsia-500/60"
          >
            Ver código en GitHub
          </a>
        )}
        {demo && (
          <a
            href={demo}
            target="_blank"
            rel="noreferrer"
            class="inline-flex items-center justify-center rounded-xl border border-slate-300 bg-white px-4 py-2 text-xs md:text-sm font-medium text-slate-800 shadow-sm transition hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100"
          >
            Ver demo en producción
          </a>
        )}
      </div>
    </section>

    {/* CONTENIDO */}
<section class="mt-10">
  <article class="prose prose-slate mx-auto text-sm md:text-base dark:prose-invert proyecto-content">
    <Content />
  </article>
</section>
  </main>
</BaseLayout>

